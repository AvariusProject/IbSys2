<Window x:Class="Ibsys2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ibsys2"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <TextBox x:Name="pathtextbox" HorizontalAlignment="Left" Height="23" Margin="145,85,0,0" TextWrapping="Wrap" Text="Choose Path" VerticalAlignment="Top" Width="286" IsEnabled="False"/>
        <Button x:Name="choosefile" Content="Choose Path" HorizontalAlignment="Left" Margin="145,60,0,0" VerticalAlignment="Top" Width="75" Click="choosefile_Click"/>
        <Button x:Name="xmlgenerate" Content="XML Generate" HorizontalAlignment="Left" Margin="254,301,0,0" VerticalAlignment="Top" Width="75" Click="xmlgenerate_Click"/>

    </Grid>
</Window>
