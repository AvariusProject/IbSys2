<Window x:Class="Ibsys2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ibsys2"
        mc:Ignorable="d"
        Title="Transmorfers" ResizeMode="NoResize" Height="720" Width="1280"  AllowDrop="True" DragEnter="Window_DragEnter" >
    <Grid>

        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Programm">
                <MenuItem x:Name="Helpmenuitem" Header="Help" Click="Helpmenuitem_Click"/>
                <MenuItem x:Name="Closemenuitem" Header="Close" Click="Closemenuitem_Click"/>
            </MenuItem>
            <MenuItem x:Name="Settingsmenuheader" Header="Settings" Click="Settingsmenuheader_Click"/>
            <MenuItem x:Name="Aboutmenuheader" Header="About"/>
        </Menu>
        
        <TabControl HorizontalAlignment="Left" Height="672" Margin="0,19,0,0" VerticalAlignment="Top" Width="1274">
            <TabItem Header="Main">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="choosefile" Content="Browse File" HorizontalAlignment="Left" Margin="10,21,0,0" VerticalAlignment="Top" Width="75" Click="Choosefile_Click"/>
                    <Button x:Name="xmlgenerate" Content="Read XML File" HorizontalAlignment="Left" Margin="10,105,0,0" VerticalAlignment="Top" Width="118" Click="Xmlgenerate_Click"/>
                    <TextBox x:Name="pathtextbox" MaxLines="1" HorizontalAlignment="Left" Height="23" Margin="10,77,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="286"/>
                    <Button x:Name="clear" Content="Clear all" HorizontalAlignment="Left" Margin="221,105,0,0" VerticalAlignment="Top" Width="75" Click="Clear_Click" RenderTransformOrigin="0.587,3.75"/>
                    <Label Content="Verbindliche Aufträge:" HorizontalAlignment="Left" Margin="379,99,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="ordersp1" HorizontalAlignment="Left" Height="23" Margin="354,139,0,0" TextWrapping="Wrap" Text="Kinder P1" VerticalAlignment="Top" Width="120" />
                    <Label Content="Sicherheitsbestand:" HorizontalAlignment="Left" Margin="970,99,0,0" VerticalAlignment="Top" Width="120"/>
                    <Label Content="Direktbestellungen:" HorizontalAlignment="Left" Margin="1121,99,0,0" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="forecastsy1p1" HorizontalAlignment="Left" Height="23" Margin="528,139,0,0" TextWrapping="Wrap" Text="P1" VerticalAlignment="Top" Width="120"/>
                    <Label Content="Prognosen:" HorizontalAlignment="Left" Margin="528,99,0,0" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="directordersp1" HorizontalAlignment="Left" Height="23" Margin="1121,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="directordersp2" HorizontalAlignment="Left" Height="23" Margin="1121,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="directordersp3" HorizontalAlignment="Left" Height="23" Margin="1121,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <Button x:Name="calculatebutton" Content="Berechne" HorizontalAlignment="Left" Margin="1166,214,0,0" VerticalAlignment="Top" Width="75"/>
                    <TextBox x:Name="reservestockp1" HorizontalAlignment="Left" Height="23" Margin="970,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="reservestockp2" HorizontalAlignment="Left" Height="23" Margin="970,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="reservestockp3" HorizontalAlignment="Left" Height="23" Margin="970,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="forecastsy3p1" HorizontalAlignment="Left" Height="23" Margin="792,139,0,0" TextWrapping="Wrap" Text="P1" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="forecastsy3p2" HorizontalAlignment="Left" Height="23" Margin="792,167,0,0" TextWrapping="Wrap" Text="P2" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="forecastsy3p3" HorizontalAlignment="Left" Height="23" Margin="792,200,0,0" TextWrapping="Wrap" Text="P3" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="forecastsy2p1" HorizontalAlignment="Left" Height="23" Margin="667,139,0,0" TextWrapping="Wrap" Text="P1" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="forecastsy2p2" HorizontalAlignment="Left" Height="23" Margin="667,167,0,0" TextWrapping="Wrap" Text="P2" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="forecastsy2p3" HorizontalAlignment="Left" Height="23" Margin="667,200,0,0" TextWrapping="Wrap" Text="P3" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="forecastsy1p2" HorizontalAlignment="Left" Height="23" Margin="528,167,0,0" TextWrapping="Wrap" Text="P2" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="forecastsy1p3" HorizontalAlignment="Left" Height="23" Margin="528,200,0,0" TextWrapping="Wrap" Text="P3" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="ordersp2" HorizontalAlignment="Left" Height="23" Margin="354,172,0,0" TextWrapping="Wrap" Text="Damen P2" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="ordersp3" HorizontalAlignment="Left" Height="23" Margin="354,200,0,0" TextWrapping="Wrap" Text="Herren P3" VerticalAlignment="Top" Width="120"/>
                </Grid>
            </TabItem>
            <TabItem Header="Produktionsprogramm">
                <Grid Background="#FFE5E5E5">
                    <Button Content="Button" HorizontalAlignment="Left" Margin="186,57,0,0" VerticalAlignment="Top" Width="75"/>
                </Grid>
            </TabItem>
        </TabControl>


    </Grid>
</Window>
